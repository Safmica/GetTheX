<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER"
    styleClass="serverPage"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.safmica.controllers.ServerControllers">

    <Label text="Create Game Room" styleClass="title" maxWidth="Infinity" alignment="CENTER" />
    <VBox styleClass="serverForm">
        <HBox spacing="10" alignment="CENTER">
            <Label text="Port:" />
            <TextField fx:id="portField" promptText="Enter Port" />
        </HBox>
    </VBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Create" styleClass="submitButton" onAction="#createTCPServer"/>
        <Button text="Cancel" styleClass="cancelButton" onAction="#backToMenu" />
    </HBox>
</VBox>