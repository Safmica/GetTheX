<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.safmica.controllers.RoomController">
    <children>
        <Label text="Get The X Room" styleClass="title"/>
        <ListView fx:id="playersList" prefHeight="200.0" prefWidth="360.0" />
        <Button fx:id="startButton" text="Start" onAction="#handleStart" styleClass="submitButton" prefWidth="100.0" visible="false" managed="false" />
        <Button text="Exit" onAction="#handleExit" styleClass="button-danger" prefWidth="100.0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
