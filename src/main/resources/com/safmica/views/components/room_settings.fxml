<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.safmica.controllers.RoomSettingsController">
    <children>
        <Label text="Room Settings" styleClass="title" />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Total Cards:" prefWidth="100.0" />
            <Spinner fx:id="totalCardSpinner" min="4" max="6" initialValue="4" prefWidth="80.0"
                editable="true" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Total Rounds:" prefWidth="100.0" />
            <Spinner fx:id="totalRoundSpinner" min="3" max="15" initialValue="3" prefWidth="80.0"
                editable="true" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Player Limit:" prefWidth="100.0" />
            <Spinner fx:id="playerLimitSpinner" min="1" max="10" initialValue="1" prefWidth="80.0"
                editable="true" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button text="Save" onAction="#handleSave" styleClass="submitButton" prefWidth="80.0" />
            <Button text="Cancel" onAction="#handleCancel" styleClass="button-danger"
                prefWidth="80.0" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>