<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.safmica.controllers.GameController" prefWidth="1280" prefHeight="720" styleClass="game-container">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="top-bar">
