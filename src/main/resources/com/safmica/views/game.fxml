            <VBox alignment="CENTER" spacing="10.0">
                <TextField fx:id="answerField" text="1+7+8+0+3+3" styleClass="answer-field" prefWidth="500" editable="false"/>
                
                <HBox fx:id="cardsContainer" alignment="CENTER" spacing="10.0" styleClass="cards-container">
                </HBox>
            </VBox>
            
            <VBox alignment="CENTER" spacing="10.0">
                <HBox alignment="CENTER" spacing="10.0">
                    <Button text="Surend" styleClass="calculator-button" prefWidth="100" onAction="#handleSurrender"/>
