                </HBox>
                
                <Button text="Submit >" styleClass="submit-button" prefWidth="200" prefHeight="40" onAction="#handleSubmit"/>
            </VBox>
            
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="10.0" styleClass="players-panel" prefWidth="200">
            <Label text="Total" styleClass="score-header"/>
            <Label fx:id="totalScoreLabel" text="22" styleClass="total-score"/>
            
            <Label text="x = " styleClass="score-header"/>
            <Label fx:id="x" styleClass="target-score"/>
            
            <ScrollPane fitToWidth="true" styleClass="players-scroll">
                <VBox fx:id="playersContainer" spacing="5.0">
                </VBox>
            </ScrollPane>
            
            <padding>
                <Insets top="20.0" right="10.0" bottom="20.0" left="10.0"/>
            </padding>
        </VBox>
    </right>
    
    <left>
        <VBox alignment="CENTER" spacing="10.0" styleClass="current-player-panel">
